generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                        String             @id @default(uuid())
  name                      String
  createdAt                 DateTime           @default(now())
  AccessPermissionGrantedBy AccessPermission[] @relation("grantedBy")
  AccessPermissionGranted   AccessPermission[] @relation("grantedTo")
  AuditLog                  AuditLog[]
  ConsentRequestPatient     ConsentRequest[]   @relation("ConsentRequestPatient")
  ConsentRequestRequestedBy ConsentRequest[]   @relation("ConsentRequestRequestedBy")
  PatientRecord             PatientRecord[]
  publicKeys                PublicKey[]

}

model PublicKey {
  id        String @id @default(uuid())
  userId    String
  publicKey String @unique
  user      User   @relation(fields: [userId], references: [id])

  @@index([userId])
}

model PatientRecord {
  id               String             @id @default(uuid())
  patientId        String
  hash             String
  ipfs_cid         String
  createdAt        DateTime           @default(now())
  AccessPermission AccessPermission[]
  AuditLog         AuditLog[]
  ConsentRequest   ConsentRequest[]
  patient          User               @relation(fields: [patientId], references: [id])
}

model AccessPermission {
  id          String        @id @default(uuid())
  recordId    String
  grantedToId String
  grantedById String
  accessType  String
  expiration  DateTime
  status      String
  grantedBy   User          @relation("grantedBy", fields: [grantedById], references: [id])
  grantedTo   User          @relation("grantedTo", fields: [grantedToId], references: [id])
  record      PatientRecord @relation(fields: [recordId], references: [id])

  @@unique([recordId, grantedToId])
}

model ConsentRequest {
  id            String        @id @default(uuid())
  patientId     String
  purpose       String
  recordId      String
  requestedById String
  createdAt     DateTime      @default(now())
  status        RequestStatus @default(PENDING)
  requestedAt   DateTime      @default(now())
  resolvedAt    DateTime?
  AuditLog      AuditLog[]
  patient       User          @relation("ConsentRequestPatient", fields: [patientId], references: [id])
  record        PatientRecord @relation(fields: [recordId], references: [id])
  requestedBy   User          @relation("ConsentRequestRequestedBy", fields: [requestedById], references: [id])
}

model AuditLog {
  id         String         @id @default(uuid())
  recordId   String
  userId     String
  accessTime DateTime       @default(now())
  requestId  String
  action     Action
  record     PatientRecord  @relation(fields: [recordId], references: [id])
  request    ConsentRequest @relation(fields: [requestId], references: [id])
  accessedBy User           @relation(fields: [userId], references: [id])

  @@index([userId])
}


enum RequestStatus {
  PENDING
  APPROVED
  DENIED
}

enum Action {
  VIEWED
  DOWNLOADED
}
